<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

<!--    <LinearLayout-->
<!--        android:orientation="vertical"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:gravity="center_horizontal">-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="26dp">

        <!-- Cover Photo -->
        <ImageView
            android:id="@+id/ivCoverPhoto"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:background="#DDDDDD"
            android:layout_marginBottom="-60dp"
            android:clipToOutline="true" />

        <!-- Profile Photo -->
        <ImageView
            android:id="@+id/ivProfilePhoto"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/profile_circle_bg"
            android:padding="3dp"
            android:scaleType="centerCrop"
            android:elevation="6dp"
            android:clipToOutline="true" />

        <!-- Username -->
        <TextView
            android:id="@+id/tvUsername"
            android:text="Username"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#333333"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Email -->
        <TextView
            android:id="@+id/tvEmail"
            android:text="Email"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Profile Info Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_bg"
            android:padding="16dp"
            android:elevation="4dp"
            android:layout_marginTop="8dp">

            <!-- Name -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name:"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#444444" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="John Doe"
                android:textSize="16sp"
                android:paddingBottom="12dp"
                android:textColor="#555555" />

            <!-- Mobile -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mobile:"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#444444" />

            <TextView
                android:id="@+id/tvMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0123456789"
                android:textSize="16sp"
                android:paddingBottom="12dp"
                android:textColor="#555555" />

            <!-- Address -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address:"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#444444" />

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dhaka, Bangladesh"
                android:textSize="16sp"
                android:paddingBottom="12dp"
                android:textColor="#555555" />

            <!-- Bio -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bio:"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#444444" />

            <TextView
                android:id="@+id/tvBio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Android Developer &amp; Tech Enthusiast"
                android:textSize="16sp"
                android:paddingBottom="12dp"
                android:textColor="#555555" />

            <!-- Birthdate -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Birthdate:"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#444444" />

            <TextView
                android:id="@+id/tvBirthdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="01 Jan 2000"
                android:textSize="16sp"
                android:paddingBottom="12dp"
                android:textColor="#555555" />
        </LinearLayout>

        <!-- Edit Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="24dp">

            <Button
                android:id="@+id/btnUploadProduct"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Upload"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"/>

            <Button
                android:id="@+id/btnEditProfile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Edit"
                android:backgroundTint="#1976D2"
                android:textColor="#FFFFFF"
                android:layout_marginStart="8dp"/>
        </LinearLayout>


    </LinearLayout>
</ScrollView>
